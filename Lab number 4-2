#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 5  //Размероность строк матрицы
#define N 6  //Размерность столбцов матрицы
#define K M/2  //Половина строк
#define L N/2  //Половина Столбцов
#define Y 19-10  //Генерация случайных чисел для массива "a"(от -9 до 9)
#define A L*K

int FindSrZnach1(int a[M][N]) {  //Функция для поиска среднего значения "Зелёных областей"
    
    int i, j;  //Счётчики для прохода по всей матрице
    double srznach1 = 0;  //Объявление переменных для хранения среднего значения "зелёных областей"
    
    for (i = 0; i < K; i++) {  //Проход по первой половине строк
        
        for (j = L; j < N; j++) {  //Проход по второй половине столбцов
            
            srznach1 += a[i][j];  //Сумаа всех элементов "Зелёной" области
            
        }
        
    }
    srznach1 = srznach1 / A;  //Поиск среднего значения
    
    return srznach1;  //Вернуть массив "b" с двумя значениями
}
    
int FindSrZnach2(int a[M][N]) {  //Функция для поиска среднего значения "Зелёных областей"

    int i, j;  //Счётчики для прохода по всей матрице
    double srznach2 = 0;  //Объявление переменных для хранения среднего значения "зелёных областей"
    
    for (i = K; i < M; i++) {  //Проход по второй половине строк
        
        for (j = 0; j < L; j++) {  //Проход по первой половине столбцов
            
            srznach2 += a[i][j];  //Сумаа всех элементов "Зелёной" области
            
        }
        
    }
    srznach2 = srznach2 / A;  //Поиск среднего значения
    
    return srznach2;  //Вернуть массив "b" с двумя значениями

}

int main(int argc, const char* argv[]) {  //Главная функция
    
    srand((unsigned int)time(NULL));  //Генерация "Новых" рандомных чисел
    
    int a[M][N];  //Объявление матрицы
    int i, j;  //Счётчики для прохода по всей матрице
    
    printf("\n\n");  //Отступ для красоты
    for (i = 0; i < M; i++) {  //Проход по строкам матрицы
        
        for (j = 0; j < N; j++) {  //Проход по столбцам матрицы
            
            a[i][j] = 1 + rand() % Y;  //Заполнение "Ячейки" рандомным числом от -9 до 9
            printf("%5d", a[i][j]);  //Вывод "Ячейки" матрицы на экран(Поэлементно)
            
        }
        
        printf("\n\n");  //Переход на следующую строку для визаулизации матрицы"\n" + красивый вывод"\n"
        
    }
    
    double v;
    v = FindSrZnach1(a);
    printf("Среднее значение: %.1lf\n", v);  //Вызов функции поиска среднего значения
           
    double w;
    w = FindSrZnach2(a);
    printf("Среднее значение: %.1lf\n\n", w);  //Вызов функции поиска среднего значения
    
    return 0;  //Вернуть 0
    
}
