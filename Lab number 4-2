#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 5  //Размероность строк
#define N 5  //Размерность столбцов
#define K M/2
#define L N/2

#define R 19-10  //Генерация случайных чисел для массива "a"(от -9 до 9)

int* massive(int a[M][N]) {  
    //Функция для поиска положения первого отрицательного элемента произвольного массива целых чисел

    int i, j;  //Счётчик "i", для прохода по всем значениям массива "a"  //Переменная для указателя? возвращаемого из функции "massive"
    int counter, counter1;
    int summa = 0, summa1 = 0;

    for (i = K; i < M; i++) {  //Цикл для прохода по всем значениям массива "a"

        for (j = L; j < N; j++) {  //Цикл для прохода по всем значениям массива "a"

            summa += a[i][j];

            counter++;

        }

    }

    for (i = K; i < M; i++) {  //Цикл для прохода по всем значениям массива "a"

        for (j = 0; j < L; j++) {  //Цикл для прохода по всем значениям массива "a"

            summa1 += a[i][j];

            counter1++;

        }

    }

    int* m = new int[2];
    m[0] = 312;
    m[1] = 312;

    return m;  //Вернуть указатель на отрицательный элемент

}

int main(int argc, const char* argv[]) {  //Главная функция "main"

    srand((unsigned int)time(NULL));  //Позволяет каждый раз генерировать новые случайные числа, для вывода в консоль

    int a[M][N];  //Объявление массива "a"
    int i, j;  //Счётчик "i", для прохода по всем значениям массива "a"
    int summa, summa1;  //Переменная для указателя, возвращаемого из функции "massive"

    printf("Массив: [ ");  //Ограничение массива в консоли слева "["
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем значениям массива "a"

        for (j = 0; j < N; j++) {  //Цикл для прохода по всем значениям массива "a"

            a[i][j] = 1 + rand() % R;  //Задание каждому индексу массива "a" случайное число от -9 до 9
            printf("%d ", a[i]);  //Вывод массива в консоль

            summa = massive(a);  //Вызвать функцию "massive"

        }

    }
    printf("]\n\n");  //Ограничение массива в консоли справа "]"

    printf("Адрес первого отрицательного значения: %d\n\n", summa);  //Вывод адреса отрицательного значения на экран

    return 0;  //Вернуть 0

}
