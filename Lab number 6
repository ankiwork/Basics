#include <iostream>
#include <string>
#include <clocale>

#define SURNAME 30
#define NAME    20
#define GROUP   5

using namespace std;

struct STUDENT
{
    char* surname;
    char* name;
    char* group;
    int   number;

    STUDENT() {

        surname = new char [SURNAME];
        name    = new char [NAME];
        group   = new char [GROUP];
        number  = 0;

    }
  
    ~STUDENT() {

        delete[] surname;
        delete[] name;
        delete[] group;

    }

};

void InitStudent(STUDENT stud[], int quantity) {

    for (int i = 0; i < quantity; i++) {

        cout << "Студент номер " << i + 1 << ":" << endl;

        cout << "Фамилия:      "; cin >> stud[i].surname;
        cout << "Имя:          "; cin >> stud[i].name;
        cout << "Группа:       "; cin >> stud[i].group;
        cout << "Номер группы: "; cin >> stud[i].number;

        cout << endl;

    }

}

