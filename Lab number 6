}

int main(int argc, const char* argv[]) {

	setlocale(LC_ALL, "Russian");

	const int quantity = 8;

	int request = 0;

	struct STUDENT stud[quantity];

	AddStudent(stud, quantity);

	while (request == 0) {

		printf("Номер цифру, соответствующую вашему запросу\nЗакончить операцию - [1]\nДобавить информацию о новом студенте - [2]\nРаспечатать ифнормацию о новом студенте - [3]\nОпределить студента по группе - [4]\nОпределить всех студентов заданной группы - [5]"); 
		scanf_s("%d", &request);

		switch (request) {

		    case 1:
				break;

			case 2:

				AddNewStudent(stud, quantity);

			case 3:

				char* direction [GROUP];

				printf("Введите название группы: "); scanf_s("%s", direction);

				FindStudent(stud, quantity, direction);

			case 4:



			case 5:


		} 

	}

}
