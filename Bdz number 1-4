//Библиотеки
#include <stdio.h>
#include <stdlib.h>
#include <time.h>



//Константы
#define M 10  //Строки матрицы
#define N 12  //Cтолбцы матрицы
#define L M/2  //Половина строк
#define K N/2  //Половина столбцов
#define T L*K*2  //Количество чисел в закрашенной области



//Начало функции поиска последнего положительного числа(Индекса) массива
int FindSrZnach(int a[M][N]) {  //Вспомогательная функция
    
    
    
    //Объявление переменных, указателей и т.п.
    int b[2];  //Объявление массива для передачи данных
    int i, j;  //Счёчтики для прохода по матрице
    int srznach = 0;  //Возвращаемое значение вспомогательной функции
    
    
    
    //Основной код(поиск среднего значения в закрашенной области)
    for (i = 0; i < L; i++) {  //Проход по строкам
        
        for (j = K; j < N; j++) {  //Проход по столбцам
            
            srznach+=a[i][j];  //Прибавление к общей сумме всех чисел из закрашенной области
            
        }
        
    }
    
    //Основной код(поиск среднего значения)
    srznach = srznach / T;  //Финальный поиск среднего значения
    b[0] = srznach;  //Присвоение к массиву значения
    srznach = 0;  //Обнуление для нижнего цикла
    
    //Основной код(поиск среднего значения в закрашенной области)
    for (i = L; i < M; i++) {  //Проход по строкам
        
        for (j = 0; j < K; j++) {  //Проход по столбцам
            
            srznach+=a[i][j];  //Прибавление к общей сумме всех чисел из закрашенной области
            
        }
        
    }
    
    //Основной код(поиск среднего значения)
    srznach = srznach / T;  //Финальный поиск среднего значения
    b[1] = srznach;  //Присвоение к массиву значения
    srznach = 0;  //Обнуление для нижнего цикла
    
    
    //Возвращаемое значение функции
    return b;  //Вернуть массив со средними значениями
    
}


//Начало главной функции
int main() {  //Главная функция
    
    
    
    //Предустановки
    srand((unsigned int)time(NULL));  //Позволяет генерировать каждый раз "Новые" случайные числа
    
    
    
    //Объявление переменных, указателей и т.п.
    int a[M][N];  //Объявление массива
    int b[2];  //Объявления массива для принятия из второстепенной функции
    int i, j;  //Счёчтики для прохода по матрице
    int srznach;  //Возвращаемое значение вспомогательной функции (Среднее значение)
    
    
    
    //Основной код(Задание матрицы)
    printf("\n\n");  //Перенос для красоты вывода
    for (i = 0; i < M; i++) {  //Проход по строкам матрицы
        
        for (j = 0; j < N; j++) {
            
            a[i][j] = 1 + rand() % 9;  //Генерация случайного числа для "Отдельного элемента массива"
            printf("%5d", a[i][j]);  //Вывод сразу после генерации
            
        }
        
        printf("\n\n");  //Двойной отступ для симметричности матрицы при выводе
        
    }
    
    
    
    //Вызов функции
    b = FindSrZnach(a);  //Вызов вспомогательной функции + передать массив "а"
    
    
    
    //Основной код(Вывод в консоль верхней области)
    printf("Среднее занчение верхней закрашенной области: %d\n", b[0]);  //Вывод + отступ для красоты
    
    //Основной код(Вывод в консоль нижней области)
    printf("Среднее занчение нижней закрашенной области: %d\n\n", b[1]);  //Вывод + отступ для красоты
    
    
    
    //Возвращаемое значение функции
    return 0;  //Вернуть 0
    
}

