#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define M 5  //Размероность массива
#define R 19-10  //Генерация случайных чисел для массива "a"(от -9 до 9)

int massive(int a[M]) {  //Функция для поиска положения первого отрицательного элемента произвольного массива целых чисел
    
    int i;  //Счётчик "i", для прохода по всем значениям массива "a"
    int ukasatel = 0;  //Переменная для указателя? возвращаемого из функции "massive"
    
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем значениям массива "a"
        
        if (a[i] < 0) {
            
            ukasatel = a[i];  //Присвоить к переменной первое отрицательное значение(По заданию нужен указатель, ВРЕМЕННО!!!)
            
            return 0;  //Остановка цикла при нахождении ПЕРВОГО отрицательного числа
            
        }
        
    }
    
    return ukasatel;  //Вернуть указатель на отрицательный элемент
    
}

int main(int argc, const char * argv[]) {  //Главная функция "main"
    
    srand((unsigned int)time(NULL));  //Позволяет каждый раз генерировать новые случайные числа, для вывода в консоль

    int a[M];  //Объявление массива "a"
    int i;  //Счётчик "i", для прохода по всем значениям массива "a"
    int ukasatel = 0;  //Переменная для указателя, возвращаемого из функции "massive"
    
    printf("Массив: [ ");  //Ограничение массива в консоли слева "["
    for (i = 0; i < M; i++) {  //Цикл для прохода по всем значениям массива "a"
        
        a[i] = 1 + rand() % R;  //Задание каждому индексу массива "a" случайное число от -9 до 9
        printf("%d ", a[i]);  //Вывод массива в консоль
        ukasatel = massive(a);
        
    }
    printf("]\n\n");  //Ограничение массива в консоли справа "]"
    
    return 0;  //Вернуть 0
    
}

